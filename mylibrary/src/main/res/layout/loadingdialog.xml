<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@color/transparent"
		    android:gravity="center"
		    android:layout_marginRight="50px"
		    android:orientation="vertical">

			<ProgressBar 
			    android:id="@+id/zdyprogressbar"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/progressbarcenter"
				android:indeterminate="true" 
				android:minHeight="135px"
				android:minWidth="135px"
				android:maxHeight="135px"
				android:maxWidth="135px"
				android:indeterminateDrawable="@drawable/progressbar" 
				/>
			<TextView
			    android:id="@+id/progressbarcontent"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="-30px"
			    android:textColor="@color/common_color_b1"
			    android:textSize="30px"
			    android:text="加载中" />

</LinearLayout>