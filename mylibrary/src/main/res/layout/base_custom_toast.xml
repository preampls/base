<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_70"
        android:background="@drawable/shape_radius_35_fef6e7"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/px_1000"
        android:paddingLeft="@dimen/px_80"
        android:paddingRight="@dimen/px_35"
        android:textColor="@color/color_9b6046"
        android:textSize="@dimen/px_24" />

    <ImageView
        android:layout_width="@dimen/px_70"
        android:layout_height="@dimen/px_70"
        android:background="@mipmap/icon_worn" />
</RelativeLayout>